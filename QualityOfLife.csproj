<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>10.0</LangVersion>
    <OutputPath>bin/Release/</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LavaGang.MelonLoader" Version="0.7.0" />
    <PackageReference Include="Lib.Harmony" Version="2.3.5" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Assembly-CSharp">
      <HintPath>..libs/Assembly-CSharp.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>..libs/UnityEngine.CoreModule.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.UI">
      <HintPath>..libs/UnityEngine.UI.dll</HintPath>
    </Reference>
    <Reference Include="Unity.TextMeshPro">
      <HintPath>..libs/Unity.TextMeshPro.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.TextRenderingModule">
      <HintPath>..libs/UnityEngine.TextRenderingModule.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Remove="scripts/***" />
    <None Remove=".gitignore" />
  </ItemGroup>

  <Target Name="PostBuildActions" AfterTargets="Build">
    <PropertyGroup>
      <DllName>$(AssemblyName).dll</DllName>
      <GameModsFolder
            >$(HOME)/.steam/steam/steamapps/common/Schedule I/Mods</GameModsFolder>
    </PropertyGroup>

    <Message Text="Copying DLL to $(GameModsFolder)..." Importance="high" />
    <Copy
            SourceFiles="$(OutputPath)$(DllName)"
            DestinationFolder="$(GameModsFolder)"
            SkipUnchangedFiles="true"
        />

    <Message Text="Launching Schedule I via Steam..." Importance="high" />
    <Exec Command="bash -c &quot;/usr/bin/steam -applaunch 3164500&quot;" />
  </Target>

</Project>
