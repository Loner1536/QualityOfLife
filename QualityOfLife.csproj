<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>10.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LavaGang.MelonLoader" Version="0.7.0" />
    <PackageReference Include="Lib.Harmony" Version="2.3.5" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Assembly-CSharp">
      <HintPath>..libs\Assembly-CSharp.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>..libs\UnityEngine.CoreModule.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.UI">
      <HintPath>..libs\UnityEngine.UI.dll</HintPath>
    </Reference>
    <Reference Include="Unity.TextMeshPro">
      <HintPath>..libs\Unity.TextMeshPro.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.TextRenderingModule">
      <HintPath>..libs\UnityEngine.TextRenderingModule.dll</HintPath>
    </Reference>
  </ItemGroup>

  <!-- Ensure the build.sh script is executable -->
    <Target Name="EnsureBuildScriptExecutable" BeforeTargets="Build">
      <Exec
            Command="test -x ./scripts/build.sh || chmod +x ./scripts/build.sh"
        />
    </Target>

    <!-- Main Build Target -->
    <Target Name="Build" DependsOnTargets="EnsureBuildScriptExecutable">
      <!-- Your main build steps go here -->
      <Exec Command="echo Building the project..." />
    </Target>

    <!-- Run build.sh only if the Build is successful -->
    <Target Name="RunBuildScript" DependsOnTargets="Build" AfterTargets="Build">
      <Exec Command="./scripts/build.sh" />
    </Target>
</Project>
