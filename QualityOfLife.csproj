<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <LangVersion>10.0</LangVersion>
    <OutputPath>bin/Release/</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LavaGang.MelonLoader" Version="0.7.0" />
    <PackageReference Include="Lib.Harmony" Version="2.3.5" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Assembly-CSharp">
      <HintPath>libs/Assembly-CSharp.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>libs/UnityEngine.CoreModule.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.UI">
      <HintPath>libs/UnityEngine.UI.dll</HintPath>
    </Reference>
    <Reference Include="Unity.TextMeshPro">
      <HintPath>libs/Unity.TextMeshPro.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.TextRenderingModule">
      <HintPath>libs/UnityEngine.TextRenderingModule.dll</HintPath>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuildActions" AfterTargets="Build">
    <PropertyGroup>
      <DllName>$(AssemblyName).dll</DllName>
      <GameModsFolder
            >$(HOME)/.steam/steam/steamapps/common/Schedule I/Mods</GameModsFolder>
      <GameProcessName>ScheduleI</GameProcessName>
      <SteamAppID>3164500</SteamAppID>
    </PropertyGroup>

    <Message Text="Copying DLL to $(GameModsFolder)..." Importance="high" />
    <Copy
            SourceFiles="$(OutputPath)$(DllName)"
            DestinationFolder="$(GameModsFolder)"
            SkipUnchangedFiles="true"
        />

    <Message
            Text="Checking if $(GameProcessName) is running..."
            Importance="high"
        />
    <Exec
            Command="bash -c &quot;if pgrep -x '$(GameProcessName)' &gt; /dev/null; then echo 'Game is running. Restarting...'; pkill -x '$(GameProcessName)'; sleep 2; fi&quot;"
        />

    <Message Text="Launching Schedule I via Steam..." Importance="high" />
    <Exec
            Command="bash -c &quot;/usr/bin/steam -applaunch $(SteamAppID)&quot;"
        />
  </Target>

</Project>
