<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>10.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LavaGang.MelonLoader" Version="0.7.0" />
    <PackageReference Include="Lib.Harmony" Version="2.3.5" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Assembly-CSharp">
      <HintPath>..libs\Assembly-CSharp.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>..libs\UnityEngine.CoreModule.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.UI">
      <HintPath>..libs\UnityEngine.UI.dll</HintPath>
    </Reference>
    <Reference Include="Unity.TextMeshPro">
      <HintPath>..libs\Unity.TextMeshPro.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.TextRenderingModule">
      <HintPath>..libs\UnityEngine.TextRenderingModule.dll</HintPath>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="Build">
    <Exec
            Condition="'$(OS)' == 'Windows_NT'"
            Command="taskkill /F /IM 'Schedule I.exe' 2>NUL &amp; copy /Y &quot;$(TargetPath)&quot; &quot;%ProgramFiles(x86)%\Steam\steamapps\common\Schedule I\Mods\$(TargetFileName)&quot;"
        />
    <Exec
            Condition="'$(OS)' != 'Windows_NT' AND '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform(`OSX`))' == 'true'"
            Command="pkill -f 'Schedule I'; cp &quot;$(TargetPath)&quot; &quot;$(HOME)/Library/Application Support/Steam/steamapps/common/Schedule I/Mods/$(TargetFileName)&quot;"
        />
    <Exec
            Condition="'$(OS)' != 'Windows_NT' AND '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform(`Linux`))' == 'true'"
            Command="pkill -f 'Schedule I'; cp &quot;$(TargetPath)&quot; &quot;$(HOME)/.local/share/Steam/steamapps/common/Schedule I/Mods/$(TargetFileName)&quot;"
        />
  </Target>

</Project>
